<div class="groups-panel">

    <div class="header">
        <label class="@CssClass("toggle-box", Group.SelectionState.ToString().ToLower())">
            <input type="button" @onclick="@(() => OnClickToggleBox(Group))" />
        </label>
        <span class="text">Categories</span>
    </div>

    <div class="selector">
        <GroupSelector Groups="Group.SubGroups" OnChangeGroupSelection="_OnChangeGroupSelection" />
    </div>
</div>